<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECET230Lab9SolarPowerController.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">
            <Label
                Text="Schematic"
                FontSize="Header"
                HorizontalOptions="Center"
                    />
            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Image
                    Source="providedschematic.png"
                    />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                HorizontalOptions="Center">
                <VerticalStackLayout>
                    <Label
                        Text="Reported Values"
                        FontSize="Header"
                        HorizontalOptions="Center"
                        />
                    <HorizontalStackLayout
                        HorizontalOptions="Center">
                        <VerticalStackLayout
                        Padding="20,0">
                            <Label
                            Text="Solar Panel Voltage:"
                            />
                            <Label
                            Text="Solar Panel Current:"
                            />
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label
                            Text="000.000[V]"
                            />
                            <Label
                            Text="000.000[A]"
                            />
                        </VerticalStackLayout>

                        <VerticalStackLayout
                            Padding="20,0">
                            <Label
                            Text="Battery Voltage:"
                            />
                            <Label
                            Text="Battery Current:"
                            />
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label
                            Text="000.000[V]"
                            />
                            <Label
                            Text="000.000[A]"
                            />
                        </VerticalStackLayout>

                        <VerticalStackLayout
                            Padding="20,0">
                            <Label
                            Text="Load 1 Current:"
                            />
                            <Label
                            Text="Load 2 Current:"
                            />
                        </VerticalStackLayout>
                        <VerticalStackLayout
                            HorizontalOptions="End">
                            <Label
                            Text="000.000[A]"
                            />
                            <Label
                            Text="000.000[A]"
                            />
                        </VerticalStackLayout>

                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </HorizontalStackLayout>

            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Label
                    Text="User controls"
                    FontSize="Header"
                    />
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <VerticalStackLayout>
                    <Label Text="Load 1"/>
                    <Switch IsToggled="False"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Load 2"/>
                    <Switch IsToggled="False"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Port Control"/>
                    <HorizontalStackLayout>
                        <Picker 
                            x:Name="pickerAvailablePorts"/>
                        <Button 
                        x:Name="BtnOpenPort"
                        Text="Open Port"    
                            />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </HorizontalStackLayout>

            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Label
                    Text="Enable serial debugging data"
                    />
                <CheckBox
                    x:Name="chkBoxEnaSerDebug"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Recieved Packet:"
                    />
                <Label 
                    x:Name="labelRecievedPacket" 
                    Text="packetshowhere"
                       />
                <Entry
                    x:Name="entryDebugPacketOverRide"
                    Text="###1234Chk"
                    />
                <Button
                    x:Name="Send"
                    Text="Send"
                    />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
